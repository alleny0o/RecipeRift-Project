<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="https://images.vexels.com/media/users/3/233774/isolated/preview/37ca2c5e787140e3fa262dafedc968e7-wooden-spoon-cooking-utensil-flat.png"
    />
    <link rel="stylesheet" href="styles.css" />
    <title>RecipeRift</title>
  </head>
  <body id="body">
    <header class="main-header">
      <h1 class="header-h1">RecipeRift</h1>
      <nav class="header-nav">
        <ul class="nav-ul">
          <li class="nav-li">
            <a href="#about-section">DailyRecipe</a>
          </li>
          <li class="nav-li a2">
            <a href="#generator-section">RecipeGenerator</a>
          </li>
        </ul>
      </nav>
    </header>
    <section id="about-section">
      <div class="about-section-flex">
        <div
          class="daily-recipe-description-container"
          id="daily-recipe-description-container"
        >
          <h1>Daily Recipe!</h1>
          <p><%= currSelected.name %></p>
          <img src="" />
          <div class="line"></div>
          <a class="button-one" href="<%= currSelected.link %>" target="_blank">
            The Recipe!
          </a>
          <a
            class="button-two button-margin"
            href="<%= currSelected.link %>/#comments"
            target="_blank"
          >
            Reviews!
          </a>
          <div class="custom-bottom"></div>
        </div>
        <div class="daily-recipe-img-container" id="daily-recipe-img-container">
          <img src="<%= currSelected.image %>" alt="" />
        </div>
      </div>
    </section>
    <section id="generator-section">
      <form id="generator-form" autocomplete="off">
        <h2>Recipe Search</h2>
        <label for="recipe">Recipe <span class="required">*</span>:</label>
        <input
          type="text"
          id="recipe"
          name="recipe"
          placeholder="Enter recipe..."
          required
          autocomplete="off"
        />

        <label for="exclusions">Exclude Ingredients:</label>
        <input
          type="text"
          id="exclusions"
          name="exclusions"
          placeholder="Enter excluded ingredients, separated by commas"
          autocomplete="off"
          pattern="[\w , ]+"
        />

        <div class="select-container">
          <div class="select-margin">
            <label for="meal-type">Meal Type:</label>
            <select name="mealType" id="meal-type" autocomplete="off">
              <option value="">Default (Any)</option>
              <option value="Breakfast">Breakfast</option>
              <option value="Dinner">Dinner</option>
              <option value="Lunch">Lunch</option>
              <option value="Snack">Snack</option>
              <option value="Teatime">Teatime</option>
            </select>
          </div>

          <div class="select-margin">
            <label for="dish-type">Dish Type:</label>
            <select name="dishType" id="dish-type" autocomplete="off">
              <option value="">Default (Any)</option>
              <option value="Biscuits and cookies">Cookies</option>
              <option value="Bread">Bread</option>
              <option value="Cereals">Cereals</option>
              <option value="Condiments and sauces">Sauces</option>
              <option value="Desserts">Desserts</option>
              <option value="Drinks">Drinks</option>
              <option value="Soup">Soup</option>
              <option value="Main course">Main course</option>
              <option value="Pancake">Pancake</option>
              <option value="Preps">Preps</option>
              <option value="Preserve">Preserve</option>
              <option value="Salad">Salad</option>
              <option value="Sandwiches">Sandwiches</option>
              <option value="Side dish">Side dish</option>
              <option value="Soup">Soup</option>
              <option value="Starter">Starter</option>
              <option value="Sweets">Sweets</option>
            </select>
          </div>
        </div>

        <label id="time-label" for="cooking-time"
          >Cooking Time Limit (minutes):</label
        >
        <input
          type="number"
          id="cooking-time"
          name="cookingTime"
          placeholder="Enter cooking time in minutes"
          min="0"
          autocomplete="off"
        />
        <div class="center-submit-button">
          <input id="submit-button" type="submit" autocomplete="off" />
        </div>
      </form>
    </section>
    <section id="cards-section"></section>
    <script src="script.js"></script>
  </body>
</html>
